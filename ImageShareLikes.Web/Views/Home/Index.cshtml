@model IEnumerable<ImageShareLikes.Data.Image>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        @foreach (var image in Model)
        {
            <div class="well" style="margin-bottom: 20px; text-align: center;">
                <a href="/home/viewimage?id=@image.Id">
                    <h3>@image.Title</h3>
                    <h5>Uploaded at: @image.DateUploaded.ToString("MM/dd/yyyy hh:mm tt")</h5>
                    <img style="width: 400px;" src="/uploads/@image.FileName" />
                </a>
            </div>
        }
    </div>
</div>